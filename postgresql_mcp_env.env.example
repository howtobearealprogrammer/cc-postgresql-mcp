# PostgreSQL Configuration (using standard libpq environment variables)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=your_database
PG_CONNECTION_LIMIT=10

# SSL Mode (set to "require" to enable SSL)
# PGSSLMODE=require

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=mcp-postgresql-server

# Alternative: Use a JSON config file instead of env vars
# CONFIG_PATH=/path/to/config.json

# Logging Configuration
LOG_ENABLED=false
# LOG_PATH=/path/to/custom/log/file.log
